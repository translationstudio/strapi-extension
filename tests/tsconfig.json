{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "outDir": "./dist"
  },
  "include": ["../translationstudio/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
